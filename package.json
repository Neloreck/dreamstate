{
  "name": "dreamstate-project",
  "version": "1.0.0",
  "description": "Store management library based on context and observers.",
  "private": true,
  "author": "Syrotenko Igor",
  "license": "MIT",
  "scripts": {
    "setup": "npx lerna bootstrap",
    "purge": "npx lerna clean -y",
    "clean": "npx rimraf ./target",
    "build:cjs": "npx rollup -c cli/build/rollup.cjs.config.js",
    "build:esm": "npx rollup -c cli/build/rollup.esm.config.js",
    "build:dts": "npx rollup -c cli/build/rollup.dts.config.js && mv ./target/dist/dts/lib ./target/dist/dts/lib.d.ts",
    "build:ptb": "npm run clean && npx rollup -c cli/build/rollup.esm.portable.config.js",
    "build": "npm run clean && npm run build:dts && npm run build:esm && npm run build:cjs",
    "lint": "npx eslint . --ext .ts,.js",
    "test": "jest --config cli/test/jest.config.js --detectOpenHandles",
    "benchmark": "npx cross-env NODE_ENV=production npx ts-node --project ./tsconfig.json ./cli/benchmark/run.ts",
    "pre-deploy": "npm run clean && npm run lint && npm test && npm run build && npx ts-node cli/deploy/prepare.ts",
    "deploy": "npm run pre-deploy && cd ./target/pkg && npm publish"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "babel-plugin-module-resolver": "^4.0.0",  "@types/jest": "^25.2.1",
    "@types/benchmark": "^1.0.31",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "babel-jest": "^25.3.0",
    "babel-plugin-macros": "^2.8.0",
    "benchmark": "^2.1.4",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^7.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.11.0",
    "jest": "^26.0.1",
    "lerna": "^3.21.0",
    "react": "^16.8.6",
    "react-dom": "^16.6.6",
    "react-redux": "^7.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.10.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2"
  }
}
