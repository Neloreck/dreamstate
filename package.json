{
  "name": "dreamstate-project",
  "version": "1.0.0",
  "description": "Store management library based on context and observers.",
  "private": true,
  "author": "Syrotenko Igor",
  "license": "MIT",
  "scripts": {
    "purge": "npx rimraf ./node_modules */node_modules */**/node_modules",
    "clean": "rimraf ./target",
    "typecheck": "tsc --noEmit",
    "build:cjs": "rollup -c cli/build/rollup.cjs.config.js",
    "build:esm": "rollup -c cli/build/rollup.esm.config.js",
    "build:dts": "rollup -c cli/build/rollup.dts.config.js && mv ./target/dist/dts/lib ./target/dist/dts/lib.d.ts",
    "build:ptb": "rollup -c cli/build/rollup.esm.portable.config.js",
    "build": "pnpm build:dts && pnpm build:esm && pnpm build:cjs",
    "format": "prettier --write \"**/*.(js|ts|tsx)\" && eslint . --ext .ts,.tsx,.js --fix",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "test": "jest --config cli/test/jest.config.js --detectOpenHandles",
    "pre-deploy": "pnpm clean && pnpm lint && pnpm typecheck && pnpm test -- --coverage && pnpm build && ts-node cli/deploy/prepare.ts",
    "deploy": "pnpm pre-deploy && cd ./target/pkg && npm publish",
    "deploy:experimental": "pnpm pre-deploy && cd ./target/pkg && npm publish --tag experimental"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.9",
    "@babel/core": "^7.18.9",
    "@babel/node": "^7.18.9",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.18.9",
    "@babel/plugin-transform-modules-commonjs": "^7.18.6",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/enzyme": "^3.10.11",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.18",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "babel-jest": "^28.1.1",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^8.17.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-react": "^7.30.0",
    "jest": "^27.5.1",
    "pnpm": "^7.1.9",
    "prettier": "^2.5.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.77.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-import-alias": "^1.0.10",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.7.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  }
}
