{
  "name": "dreamstate-project",
  "version": "1.0.0",
  "description": "Store management library based on context and observers.",
  "private": true,
  "author": "Syrotenko Igor",
  "license": "MIT",
  "scripts": {
    "setup": "npx lerna bootstrap --hoist",
    "purge": "npx lerna clean -y",
    "clean": "npx rimraf ./target",
    "typecheck": "npx tsc --noEmit",
    "build:cjs": "npx rollup -c cli/build/rollup.cjs.config.js",
    "build:esm": "npx rollup -c cli/build/rollup.esm.config.js",
    "build:dts": "npx rollup -c cli/build/rollup.dts.config.js && mv ./target/dist/dts/lib ./target/dist/dts/lib.d.ts",
    "build:ptb": "npx rollup -c cli/build/rollup.esm.portable.config.js",
    "build": "npm run build:dts && npm run build:esm && npm run build:cjs",
    "format": "npx prettier --write \"**/*.(js|ts|tsx)\" && eslint . --ext .ts,.tsx,.js --fix",
    "lint": "npx eslint . --ext .ts,.tsx,.js",
    "test": "jest --config cli/test/jest.config.js --detectOpenHandles",
    "pre-deploy": "npm run clean && npm run lint && npm run typecheck && npm test -- --coverage && npm run build && npx ts-node cli/deploy/prepare.ts",
    "deploy": "npm run pre-deploy && cd ./target/pkg && npm publish",
    "deploy:experimental": "npm run pre-deploy && cd ./target/pkg && npm publish --tag experimental"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/node": "^7.14.7",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/plugin-transform-modules-commonjs": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@types/node": "^16.4.12",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/enzyme": "^3.10.9",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "babel-jest": "^27.0.6",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^7.25.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-react": "^7.24.0",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "prettier": "2.3.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.52.6",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
