{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es5",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@Lib/*": [ "src/*" ],
      "@Build/*": [ "build/*" ],
      "@Tests/*": [ "tests/*" ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
