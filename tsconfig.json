{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es5",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "rootDir": "./",
    "baseUrl": "./",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@/*": [ "./src/*" ]
    }
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules"
  ]
}
