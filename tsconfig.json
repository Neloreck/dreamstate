{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jest",
      "node"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "switch.ts",
    "tests/",
    "node_modules"
  ]
}
